<mythmenu name="PHONE">

   <button>
      <type>PHONE</type>
      <text>Vice mail</text>
      <description>Listen</description>
      <action>MENU voice-mail-recordings.xml</action>
   </button>

   <button>
      <type>PHONE</type>
      <text>User1(cell)</text>
      <description>Cell: xxx-xxx-xxx</description>
      <action>EXEC /bin/touch /tmp/make-call-xxx-xxx-xxx.sem</action>
   </button>

   <button>
      <type>PHONE</type>
      <text>User1(desk)</text>
      <description>Desk: yyy-yyy-yyy</description>
      <action>EXEC /bin/touch /tmp/make-call-yyy-yyy-yyy.sem</action>
   </button>

   <button>
      <type>PHONE</type>
      <text>HangUp</text>
      <description></description>
      <action>EXEC /bin/touch /tmp/hangup.sem</action>
   </button>

</mythmenu>
